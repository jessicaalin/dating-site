<h2>Edit Profile</h2>

<% if (typeof validationErrors !== "undefined") { %>
  <ul class="error">
    <% for (let field in validationErrors) { %>
      <li> <%= validationErrors[field].message %> </li>
    <% } %>
  </ul>
<% } %>

<form method="post" action="/user/<%= currentUser._id %>">
  <label for="full-name-input">Full Name</label>
  <input id="full-name-input" type="text" placeholder="Regina Phalange" name="signupFullName" value="<%=currentUser.fullName%>">
  <br>
  <label for="email-input">Email</label>
  <input id="email-input" type="email" placeholder="regina.phalange@gmail.com" name="signupEmail" value="<%=
  currentUser.email%>">
  <br>
  <p class="days">Days Off</p>
  <ul class="days">
    <li>
      <label for="mon">Mon</label>
    	<input type="checkbox" id="mon" name="userMon" value="<%=currentUser.mon%>">
    </li>
    <li>
      <label for="tue">Tue</label>
    	<input type="checkbox" id="tue" name="userTue" value="<%=currentUser.tue%>">
    </li>
    <li>
      <label for="wed">Wed</label>
    	<input type="checkbox" id="wed" name="userWed" value="<%=currentUser.wed%>">
    </li>
    <li>
      <label for="thur">Thur</label>
    	<input type="checkbox" id="thur" name="userThur" value="<%=currentUser.thur%>">
    </li>
    <li>
      <label for="fri">Fri</label>
    	<input type="checkbox" id="fri" name="userFri" value="<%=currentUser.fri%>">
    </li>
    <li>
      <label for="sat">Sat</label>
    	<input type="checkbox" id="sat" name="userSat" value="<%=currentUser.sat%>">
    </li>
    <li>
      <label for="sun">Sun</label>
    	<input type="checkbox" id="sun" name="userSun" value="<%=currentUser.sun%>">
    </li>
  </ul>
  <br>
  <label for="bio-input">Bio</label>
  <textarea id="bio-input" placeholder="I'm super cool and sexy." name="userBio"><%= currentUser.bio%></textarea>
  <p>
  <button>Save</button>
</form>
