<%if (typeof errorMessage !== "undefined") {%>
  <p>
    <%=errorMessage%>
  </p>
<%}%>

<div class="form-container">
  <form class="form" method="post" action="/process-login">
    <label for="email-input">Email</label>
    <input id="email-input" type="email" placeholder="reginaphalange@gmail.com" name="loginEmail">
    <br>
    <label for="password-input">Password</label>
    <input id="password-input" type="password" placeholder="e.g. alterego" name="loginPassword">
    <p>
    <button>Login</button>
    <div class="button-container">
      <a class="button" href="/facebook/login">Login with Facebook</a>
      <a class="button" href="/google/login">Login with Google</a>
    </div>
  </form>
</div>
